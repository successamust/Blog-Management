# Server Configuration
PORT=3050

# Database
MONGODB_URL=mongodb://localhost:27017/blog-management
# Or for MongoDB Atlas:
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database-name

# JWT Secret (Use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Base URL (for email links and password reset)
BASE_URL=http://localhost:3050
# For production:
# BASE_URL=https://blog-management-sx5c.onrender.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service Configuration
# SendGrid (Primary email service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
# Or use FROM_EMAIL for generic email service
FROM_EMAIL=noreply@yourdomain.com

# Resend (Alternative email service - optional)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Nodemailer SMTP (Alternative email service - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
